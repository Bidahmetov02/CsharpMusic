@model IEnumerable<TestMVCApp.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="text-center">
    <h1 class="display-4">Online Musical Store</h1>
    <h2>@ViewBag.Category.Title</h2>
    <a asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary btn-lg back"><img src="https://img.icons8.com/office/16/000000/circled-left-2.png"/>  Go Back</button></a>
    <div class="container mt-3">
        <div class="d-flex justify-content-between">
            @foreach (Product p in Model)
            {
                <div class="card" style="width: 18rem;">
                    <img src="@p.ImgName" class="card-img-top" alt="Product Image">
                    <div class="card-body">
                        <h5 class="card-title">@p.Name</h5>
                        <p class="card-text">@p.Description</p>
                        <h4>$ @p.Price</h4>
                        <a asp-controller="Appointment" asp-action="Index" asp-route-Id="@p.Id" class="btn btn-primary">BUY</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>