@model IEnumerable<TestMVCApp.Models.Product>

@{
    ViewData["Title"] = "MyIndex";
}

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td>@p.Price</td>
                <td>@p.Description</td>
            </tr>
        }
        </tbody>
    </table>
}
