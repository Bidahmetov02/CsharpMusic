@model TestMVCApp.Models.Customer

@{
    ViewData["Title"] = "Create Customer";
}

<h2>Customers</h2>

<form class="mt-4" asp-action="UpdateCustomerPost" method="post">
    <input asp-for="Id" hidden>
    
    <label for="name">First Name</label>
    <input asp-for="Name" type="text" id="name" class="form-control">
    
    <label for="lastname">Last Name</label>
    <input asp-for="LastName" type="text" id="lastname" class="form-control">
    
    <label for="address">Address</label>
    <input asp-for="Address" type="text" id="address" class="form-control">
    
    <label for="email">Email</label>
    <input asp-for="Email" type="email" id="email" class="form-control">
    
    <label for="paymentmethod">Select Payment Method</label>
    <select id="paymentmethod" asp-for="PaymentMethod" class="form-control">
        <option value="PayPal">PayPal</option>
        <option value="PayPal">Debit Card</option>
        <option value="PayPal">Payoneer</option>
    </select>

    <label for="boughtProduct">Bought Product</label>
    <select asp-for="BoughtProdId" class="form-control" id="boughtProduct">
        @foreach (var p in ViewBag.ProductList)
        {
            <option value="@p.Id">@p.Name</option>
        }
    </select>
    
    <button type="submit" class="btn btn-success mt-2 w-25">Update</button>
    <button asp-action="Customer" class="btn btn-primary mt-2 w-25">Back</button>
</form>