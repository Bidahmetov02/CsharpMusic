@model TestMVCApp.Models.Customer

@{
    ViewData["Title"] = "Customer";
}

<h2>Customer @Model.Name</h2>

<table class="table table-bordered table-striped mt-4">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Last Name</th>
        <th>Address</th>
        <th>Email</th>  
        <th>Payment Method</th>
        <th>Bought Product</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>@Model.Id</td>
        <td>@Model.Name</td>
        <td>@Model.LastName</td>
        <td>@Model.Address</td>
        <td>@Model.Email</td>
        <td>@Model.PaymentMethod</td>
        <td>
            @foreach (var p in @ViewBag.product)
            {
                <span>@p.Name</span>
            }
        </td>
        <td>
            <a asp-action="DeleteCustomer" asp-route-Id="@Model.Id" class="btn btn-danger">Delete</a>
            <a asp-action="UpdateCustomer" asp-route-Id="@Model.Id" class="btn btn-primary">Update</a>
        </td>
        </tr>
    </tbody>
</table>
