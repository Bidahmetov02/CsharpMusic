<table class="table table-bordered table-striped mt-4">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Last Name</th>
    </tr>
    </thead>
    <tbody>
    @foreach (Customer Customer in ViewBag.CustomerList)
    {
        <tr>
            <td>@Customer.Id</td>
            <td>@Customer.Name</td>
            <td>@Customer.LastName</td>
            <td>
                <a asp-action="CustomerDetail" asp-route-Id="@Customer.Id" class="btn btn-danger">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>
